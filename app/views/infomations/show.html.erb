<div class="header_contents">
    　<p class="header_logo">filebook</p>
    <% if user_signed_in? %>
      <a class="header_content" href = "users/sign_out" data-method = "delete"><p>ログアウト</p></a>
      <a class="header_content" href = "/infomations/new"><p>検索</p></a>
      <a href = "/infomations" class = "header_content"><p>ホーム画面に戻る</p></a>
    <% else %>
      <a href = "/users/sign_in" class="header_content" ><p><span class = "header_content_css">ログイン</span></p></a>
      <a href = "/users/sign_up" class="header_content"><p>新規登録</p></a>
      <a href = "#" class = "header_content" ><p>ランキング</p></a>
      <a class="header_content" href = "/infomations/new"><p>検索</p></a>
      <a href = "/infomations" class = "header_content"><p>ホーム画面に戻る</p></a>
      <p class = "nickname">yumanagai Tankyu For Watching MyAplication!!</p>
    <% end %>
  </div>
　<div class="infomation_show">
    <div class = "infomations_show_main">
      <div class = "infomation_image_show">
        <% if @infomation.image_url.nil?%>
          <p><img src = "data:image/png;base64," class = "entertainer_image_url_show"></p>
        <% else%>
          <p><img src = "<%= @infomation.image_url%>" class = "entertainer_image_url_show"></p>
        <% end%>
      </div>
      <div class = "infomation_show_favorite">
        <% if user_signed_in?%>
          <% if current_user.already_favorited?(@infomation) %>
            <%= button_to 'いいねを取り消す', "/infomations/#{@infomation.id}/favorites/1", method: :delete,class: 'infomation_show_delete_button'%>
          <% else %>
            <%= button_to 'いいね', infomation_favorites_path(@infomation), class: 'infomation_show_create_button' %>
          <% end %>
        <% else%>
          <p class = "keikoku">ログインをしてください</p>
        <% end %>
      </div>
      <div class = "infomation_show_main_text">
        <p class = "entertainer_name_show"><%= @infomation.name%></p>
        <p class = "infomation_age_show"><%= @infomation.age%></p>
      </div>
    </div>
  <div class = "infomation_show_comments" >
    <% if @comments %>
      <div class = "infomations_comments_box ">
        <% @comments.each do |comment|%>
          <div class = "infomation_comment_text">
            <p class = "comment_user"><%= comment.user.nickname%></p>
            <a href = "<%= @infomation.id%>/comments/<%= comment.id%>" class = "comment_text"><%= comment.text %></a>
          </div>
        <% end %>
      </div>
    <% end %>
    　<div class = "infomation_show_comment">
      　<%= form_tag("/infomations/#{@infomation.id}/comments",method: :post) do %>
        　<textarea name = "text" placeholder = "コメントする" class = "infomation_show_textarea"></textarea>
        　<input type = "submit" value = "comment" class = "infomation_show_submit">
      　<% end %>
    　</div>
  </div>
</div>